{
  "app-id": "com.github.tenderowl.norka",
  "runtime": "org.gnome.Platform",
  "sdk": "org.gnome.Sdk",
  "runtime-version": "48",
  "command": "norka",
  "finish-args": [
    "--filesystem=xdg-documents",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--share=network",
    "--socket=cups"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libspelling",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dvapi=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libspelling",
          "tag": "0.4.8"
        }
      ]
    },
    "python3-markdown2.json",
    "python3-requests.json",
    "python3-htmldocx.json",
    {
      "name": "norka",
      "builddir": true,
      "buildsystem": "meson",
      "config-opts": [
        "-Dprofile=dev",
        "-Dapp_id_suffix=.Devel"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ],
  "build-options": {
    "env": {}
  }
}
